<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:odoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.odoo.demo.controls.com.CustomForm
        android:id="@+id/form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        odoo:modelName="res.partner" >

        <Button
            android:id="@+id/toggleMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Toggle Edit Mode" />

        <com.odoo.demo.controls.com.CustomControl
            android:id="@+id/controltxt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:icon_resource="@drawable/ic_action_about"
            odoo:ofield_name="name"
            odoo:show_icon="false"
            odoo:show_label="false" >
        </com.odoo.demo.controls.com.CustomControl>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cccccc" />

        <com.odoo.demo.controls.com.CustomControl
            android:id="@+id/controltxt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:fieldType="Boolean"
            odoo:icon_resource="@drawable/ic_action_about"
            odoo:icon_tint="@color/theme_secondary_dark"
            odoo:ofield_name="is_company"
            odoo:show_label="false"
            odoo:with_bottom_padding="false" >
        </com.odoo.demo.controls.com.CustomControl>

        <com.odoo.demo.controls.com.CustomControl
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:customWidget="Switch"
            odoo:ofield_name="customer"
            odoo:show_label="false"
            odoo:with_top_padding="false" >
        </com.odoo.demo.controls.com.CustomControl>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="72dp"
            android:background="#cccccc" />

        <com.odoo.demo.controls.com.CustomControl
            android:id="@+id/controlchk3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:ofield_name="street" >
        </com.odoo.demo.controls.com.CustomControl>

        <com.odoo.demo.controls.com.CustomControl
            android:id="@+id/controlrdobtn4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:ofield_name="zip" >
        </com.odoo.demo.controls.com.CustomControl>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="72dp"
            android:background="#cccccc" />

        <com.odoo.demo.controls.com.CustomControl
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:customWidget="Searchable"
            odoo:icon_resource="@drawable/ic_action_user"
            odoo:icon_tint="@color/theme_secondary_dark"
            odoo:ofield_name="parent_id" >
        </com.odoo.demo.controls.com.CustomControl>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="72dp"
            android:background="#cccccc" />

        <com.odoo.demo.controls.com.CustomControl
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            odoo:control_label="Names (Searchable)"
            odoo:customWidget="Searchable"
            odoo:default_value="1"
            odoo:fieldType="Selection"
            odoo:ofield_name="searchable_name"
            odoo:value_array="@array/selection_names" />
    </com.odoo.demo.controls.com.CustomForm>

</ScrollView>